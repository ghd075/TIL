<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
                        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="BoardDAO"> 
     
    <resultMap id="boardResult" type="board">
        <id property="seq" column="SEQ" />
        <result property="title" column="TITLE" />
        <result property="writer" column="WRITER" />
        <result property="content" column="CONTENT" />
        <result property="regDate" column="REGDATE" />
        <result property="cnt" column="CNT" />
    </resultMap>

    <insert id="insertBoard" parameterType="board">
        <!-- <![CDATA[ -->
        INSERT INTO BOARD(SEQ
        , TITLE
        , WRITER
        , CONTENT
        <if test="filename != null">
        , FILENAME
        </if>
       	) 
        VALUES((SELECT NVL(MAX(SEQ), 0) + 1 FROM BOARD)
        , #{title}
        , #{writer}
        , #{content}
       	<if test="filename != null">
       	, #{filename}
       	</if>
       	)
        <!-- ]]> -->
    </insert>
    
    <update id="updateBoard" parameterType="board">
<!--         <![CDATA[ -->
        UPDATE BOARD 
        	<set>
	        	<if test="title != null">TITLE = #{title}, </if>
	            <if test="content != null">CONTENT = #{content},</if>
	            <if test="writer != null">WRITER = #{writer},</if>
	            <if test="cnt != null">CNT = #{cnt}</if>
        	</set>
        WHERE SEQ = #{seq}
<!--         ]]> -->
    </update>
    
    <delete id="deleteBoard" parameterType="board">
       <!--  <![CDATA[ -->
        DELETE BOARD
        <where>
        	<choose>
        		<when test="seqs != null">
        			SEQ IN
        			<foreach item="t" collection="seqs" open="(" close=")" separator=",">
        				#{t}
        			</foreach>
        		</when>
        		<otherwise>
		        	SEQ = #{seq}
        		</otherwise>
        	</choose>
        </where>
       <!--  ]]> -->
    </delete>
    
    <select id="getBoard" resultType="board">
        <![CDATA[
        SELECT * 
        FROM BOARD
        WHERE SEQ = #{seq}
        ]]>
    </select>
    
    <select id="getBoardList" resultMap="boardResult" parameterType="board">
	    SELECT * 
	    FROM BOARD
	    <!-- WHERE 1 = 1 -->
	    <!-- 동적 쿼리 작성 -->
	    <where>
    	<!-- <if test="searchCondition == 'TITLE'"> -->
    	<!-- 방법2 -->
    	<if test="searchKeyword != null and searchKeyword != ''">
	    	<choose>
	    		<when test="searchCondition == 'TITLE'">
			        AND TITLE LIKE '%'||#{searchKeyword}||'%' 
	    		</when>
	    	<!-- </if> -->
	    	<!-- <if test="searchCondition == 'CONTENT'"> -->
	    		<when test="searchCondition == 'CONTENT'">
			        AND CONTENT LIKE '%'||#{searchKeyword}||'%' 
	    		</when>
	    		<when test="searchCondition == 'WRITER'">
			        AND WRITER LIKE '%'||#{searchKeyword}||'%' 
	    		</when>
	    	<!-- </if> -->
	    	</choose>
    	</if>
	    </where>
    	ORDER BY SEQ
</select>

<!-- 페이징 처리 -->
<select id="getBoardCount" resultType="int">
	SELECT COUNT(*)
	FROM BOARD
	<!-- 동적 쿼리 작성 -->
	<where>
	<!-- 방법2 -->
    <if test="searchKeyword != null and searchKeyword != ''">
	    <!-- <if test="searchCondition == 'TITLE'"> -->
	    <choose>
	    	<when test="searchCondition == 'TITLE'">
				AND TITLE LIKE '%'||#{searchKeyword}||'%' 
	    	</when>
	    <!-- </if> -->
	    <!-- <if test="searchCondition == 'CONTENT'"> -->
	    <when test="searchCondition == 'CONTENT'">
				AND CONTENT LIKE '%'||#{searchKeyword}||'%' 
	    </when>
	    <!-- </if> -->
	    </choose>
    </if>
	</where>	
</select>
</mapper>
